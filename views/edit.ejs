<%- include('./partials/header') %>
<h1>Edit Data</h1>
<form class="form-horizontal" action="" method="post">
    <div class="form-group">
      <label class="control-label col-sm-2" for="string">String :</label>
      <div class="col-sm-4">
        <input
          type="string"
          class="form-control"
          id="string"
          name="string"
          placeholder="Enter String ..."
          value="<%= data.stringdata %>"
        />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="integer">Integer :</label>
      <div class="col-sm-4">
        <input
          type="number"
          class="form-control"
          id="integer"
          name="integer"
          placeholder="Enter Integer..."
          value="<%= data.integerdata %>"
        />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="float">Float :</label>
      <div class="col-sm-4">
        <input
          type="number"
          step="0.01"
          class="form-control"
          id="float"
          name="float"
          placeholder="Enter Float..."
          value="<%= data.floatdata %>"
        />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2">Date :</label>
      <div class="col-sm-2">
        <input
          type="date"
          class="form-control"
          id="date"
          name="date"
          value="<%= moment(data.datedata).format('YYYY-MM-DD') %>"
        />
    </div>
    <div class="form-group">
      <label for="boolean" class="control-label col-sm-2 style-label">Boolean :</label>
      <div class="col-sm-2">
        <select name="boolean" id="boolean" class="form-select col-sm-2">
          <option value="">Choose your boolean ...</option>
          <option value="true"<%= data.booleandata == true ? ' selected' : '' %> >True</option>
          <option value="false"<%= data.booleandata == false ? ' selected' : '' %>>False</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary btn-search">Submit</button>
        <a href="/" class="btn btn-warning btn-reset">Back</a>
      </div>
    </div>
  </form>
<%- include('./partials/footer') %>
